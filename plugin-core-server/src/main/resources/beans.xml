<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix">
			<value>/pages/</value>
		</property>
		<property name="suffix">
			<value>.jsp</value>
		</property>
	</bean>

	<context:component-scan base-package="org.plugin.core.server.controller" />

	<!-- Plugin Initilization. -->
	<bean id="pluginDefaultQueue" class="org.or5e.core.plugin.event.PluginEventQueueSPI" factory-method="getDefaultQueue"></bean>
	<bean id="pluginManager" class="org.or5e.core.plugin.PluginLoaderSPI" destroy-method="destroy" factory-method="getPluginManager"></bean>

</beans>